# Use US layout with US variant
# KEYMAPOPTS="us us"
KEYMAPOPTS="us us-intl"

# Set hostname to 'alpine'
HOSTNAMEOPTS=alpine

# Set device manager to udev (from eudev)
DEVDOPTS=udev

# Contents of /etc/network/interfaces
INTERFACESOPTS="auto lo
iface lo inet loopback

auto eth0
iface eth0 inet dhcp
    hostname alpine
"

# Search domain of example.com, Google public nameserver
DNSOPTS="-d localhost 8.8.8.8"

# Set timezone to UTC
TIMEZONEOPTS="UTC"

# set http/ftp proxy
#PROXYOPTS="http://webproxy:8080"
PROXYOPTS=none

# Enable community repositories and add first mirror (CDN)
APKREPOSOPTS="-c -1"

# Create admin user
#USEROPTS="-a -u -g audio,video,netdev juser"
#USERSSHKEY="ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIOIiHcbg/7ytfLFHUNLRgEAubFz/13SwXBOM/05GNZe4 juser@example.com"
#USERSSHKEY="https://example.com/juser.keys"
USEROPTS=none

# Install Openssh
SSHDOPTS=openssh

# Dummy ed25519 key so packer can get in
ROOTSSHKEY="ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIEA9dM5TE9fcTVxIv+dQa4NcYG4+OmzFD978xR7TZjdF root"

# Use openntpd
# NTPOPTS="openntpd"
NTPOPTS=openntpd

# Use /dev/sda as a sys disk
# -L sets LVM
# -e sets encryption
DISKOPTS="-Le -m sys /dev/sda"

# Setup storage with label APKOVL for config storage
#LBUOPTS="LABEL=APKOVL"
LBUOPTS=none

#APKCACHEOPTS="/media/LABEL=APKOVL/cache"
APKCACHEOPTS=none

